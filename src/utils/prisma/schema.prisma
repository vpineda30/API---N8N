generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Product {
  id          String   @id @default(uuid()) @unique
  name        String
  description String
  category    String
  quantity    Int      
  price       Decimal
  createdAt   DateTime @default(now())

  salesItems  SaleItem[]

  @@map("products")
}

model Sale {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  total     Decimal @default(0)

  items     SaleItem[]

  @@map("sales")
}

model SaleItem {
  id          String @id @default(uuid())
  saleId      String
  productId   String
  name        String
  description String
  category    String
  quantity    Int
  priceAtSale Decimal

  sale      Sale    @relation(fields: [saleId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@map("sale_items")
}
